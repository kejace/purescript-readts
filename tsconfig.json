{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6"],
        "noImplicitAny": true,
        "importHelpers": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "outDir": "src/"
    },
    "include": [
        "tsrc/**/*"
    ]
}

